  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir npm --copy-files --no-copy-ignored && tsc --emitDeclarationOnly",
    "build:scss": "yarn sass-compiler --compile",
    "update": "yarn build && yarn add file:./npm",
    "test": "yarn update && electron ./test/main.js",
    "publish": "yarn build && cd npm && npm publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "electron": "^17.2.0",
    "sass-compiler": "1.1.1-beta",
    "typescript": "^4.4.3"
  }
}
